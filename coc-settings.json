{
	"coc.preferences.formatOnSaveFiletypes": [
		"markdown",
		"terraform"
	],
	"javascript.autoClosingTags": true,
	"typescript.autoClosingTags": true,
	"codeLens.enable": true,
	"languageserver": {
		"bash": {
			"command": "bash-language-server",
			"args": [
				"start"
			],
			"filetypes": [
				"sh"
			]
		},
		"golang": {
			"command": "gopls",
			"rootPatterns": [
				"go.mod"
			],
			"filetypes": [
				"go"
			]
		},
		"godot": {
			"host": "127.0.0.1",
			"filetypes": [
				"gd",
				"gdscript3"
			],
			"port": 6008
		},
		"rust": {
			"command": "rust-analyzer",
			"filetypes": [
				"rust"
			],
			"rootPatterns": [
				"Cargo.toml"
			]
		},
		"terraform": {
			"command": "terraform-ls",
			"args": [
				"serve"
			],
			"filetypes": [
				"terraform",
				"tf"
			],
			"initializationOptions": {},
			"settings": {}
		}
	}
}
